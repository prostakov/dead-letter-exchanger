@* <h1>Side</h1> *@
@* <p>DeadLetterCountTotal: @_appState.DeadLetterCountTotal</p> *@
@* <p>InFlightCountTotal: @_appState.InFlightCountTotal</p> *@
@* k<p>SuccessfulRequeueCountTotal: @_appState.SuccessfulRequeueCountTotal</p> *@

<div class="d-flex flex-column justify-content-between mini-dashboard mt-3">
    <p class="title">Total messages in DLQ</p>
    <div class="d-flex justify-content-center">
        <div class="badge @DashboardCssClass mr-2">@_appState.DeadLetterCountTotal</div>
        <div class="d-flex flex-column justify-content-between">
            <div class="oi oi-chevron-top pt-1 @IsQueueIncreasingCssClass"></div>
            <div class="oi oi-chevron-bottom pb-1 @IsQueueDecreasingCssClass"></div>
        </div>
    </div>
</div>

@code {
    private string DashboardCssClass => _appState.DeadLetterCountTotal == 0 ? "badge-light" : "badge-warning";
    private string IsQueueIncreasingCssClass => _appState.InFlightCountTotal > 5000 ? "glowing-danger" : string.Empty;
    private string IsQueueDecreasingCssClass => _appState.SuccessfulRequeueCountTotal > 5000 ? "glowing-warning" : string.Empty;
}
